        </tr>
        </thead>
        <tbody>
        {% set tottva=0 %}
        {% set totht=0 %}
        {% set totttc=0 %}
        {% set nbl=0 %}

        {% for k,l in b.ligneCommandes %}

        <tr>
            <td>{{ l.produit }}</td>

            <td> {{ l.quantite }}</td>
            <td>{{ l.tva }}%</td>
            <td>{{ l.puht }}</td>
            <td>{{ l.totalht }}</td>

            {% set nbl=nbl+1 %}

            {% set tottva=tottva+l.montanttva %}
            {% set totht=totht+l.totalht %}
            {% set totttc=totht+tottva %}


        <tr>

            {% endfor %}


        <tr>
            <td colspan="2" style="border: none"></td>

            <td colspan="2" style="text-align: right"><b>المجموع دون احتساب الاداءات:</b>
