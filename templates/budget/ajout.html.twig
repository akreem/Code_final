{% extends 'base.html.twig' %}

{% block title %}Hello DevisController!{% endblock %}

{% block body %}
    <title>Ajouter Budget</title>


        <style>
            .example-wrapper { margin: 1em auto; max-width: 950px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        </style>


        <fieldset class="container">
            <div class="col-md-15">
                <div class="card shadow-lg border-0 rounded-lg mt-1">
                    <div class="card-header border-bottom-success" >
                        <h3  class="text-gray-900 text-center font-weight-bold my-4 ">Ajouter Un Nouveau Budget :
                        </h3>
                    </div>
                    <div class="card-body" >
                        {{ form_start(form) }}

                            <fieldset class=" card-header border-bottom-warning border-left-warning" >
                                <h5  style="color: red;text-align: right"><b>Budget</b></h5>


                                <div class="row">

                            <div class="form-group col-md-4">
                                <div class="m-0 font-weight-bold text-primary">
                                    {{ form_label(form.annee,'Annèe') }}
                                </div>
                                {{ form_widget(form.annee,
                                    {'attr': {'class': 'form-control form-control-sm'}}) }}
                                <div class="form-error text-danger">
                                    {{ form_errors(form.annee) }}
                                </div>
                            </div>

                                    <div class="form-group col-md-4">
                                        <div class="m-0 font-weight-bold text-primary">
                                            {{ form_label(form.totalht,'Montant Réservé') }}
                                        </div>
                                        {{ form_widget(form.totalht,{'attr': {'class': ' form-control form-control-sm '
                                            ,'step':'0.01','value':'0','min' : 0,
                                            },'type':'number'
                                        }) }}
                                    </div>
                            </div>
                            </fieldset>
                            <br>
                            <fieldset class=" card-header border-bottom-danger border-left-danger" >
                                <h3>Rubriques</h3>
                                <br>

                                <ol   class="tags" data-prototype="{{ form_widget(form.rubriques.vars.prototype)|e('html_attr') }}">
                                    {% for l in form.rubriques %}
                                        <li class="row">
                                            {{ form_widget(l.code) }}
                                            {{ form_widget(l.titre) }}
                                            {{ form_widget(l.montant) }}
                                            &nbsp;&nbsp;
                                        </li>
                                    {% endfor %}
                                </ol>

                            </fieldset>
<br>
                        <a  href="#" class="btn btn-primary btn-block" data-toggle="modal" data-target="#submitModal">Valider</a>
                        <!-- submit Modal-->
                        <div class="modal fade" id="submitModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog " role="document">
                                <div class="modal-content">
                                    <div class="modal-header modal-colored-header bg-primary">
                                        <h5 class="modal-title text-white" id="exampleModalLabel">Demande de confirmation</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span class="text-white" aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">Êtes-vous sûr de vouloir continuer ? </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
                                        <button class="btn btn-primary" type="submit">Valider</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </fieldset>
    <!-- Embed Collection -->
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('embed1.js') }}"></script>

    <!-- Embed Collection -->

{% endblock %}
