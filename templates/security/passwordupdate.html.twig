{% extends 'base.html.twig' %}


{% block body %}
<title>Modifier mot de passe</title>


    <fieldset class="container">
    <div class="col-md-15">
    <div class="card shadow-lg border-0 rounded-lg mt-1">
    <div class="card-header border-bottom-danger " >
        <h3  class="text-gray-900 text-center font-weight-bold my-4">

         <i class="fas fa-key"> </i>   Changer le mot de passe</b>
        </h3>
    </div>

    <div class="card-body ">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <fieldset class=" card-header border-bottom-warning border-left-warning" >
                <div class="form-group col-md-4 row">
                    <div class="m-0 font-weight-bold text-primary">
                        {{ form_label(form.oldPassword,'Mot de passe actuel') }}
                    </div>
                    {{ form_widget(form.oldPassword,
                        {'attr': { 'class': 'form-control dropdown-toggle '}}) }}
                    <div class="form-error text-danger">
                        {{ form_errors(form.oldPassword) }}
                    </div>

                </div>
            <div class="row">

                <div class="form-group col-md-4">
                    <div class="m-0 font-weight-bold text-primary">
                        {{ form_label(form.newPassword,'Nouveau Mot de passe') }}
                    </div>
                    {{ form_widget(form.newPassword,
                        {'attr': { 'class': 'form-control dropdown-toggle'}}) }}
                    <div class="form-error text-danger">
                        {{ form_errors(form.newPassword) }}
                    </div>

                </div>
                <div class="form-group col-md-4">
                    <div class="m-0 font-weight-bold text-primary">
                        {{ form_label(form.confirmPassword,'Confirmer Le Nouveau Mot de passe ') }}
                    </div>
                    {{ form_widget(form.confirmPassword,
                        {'attr': { 'class': 'form-control dropdown-toggle'}}) }}
                    <div class="form-error text-danger">
                        {{ form_errors(form.confirmPassword) }}
                    </div>

                </div>
            </div>
                <br>
        <button type="submit" class="btn btn-primary btn-block">
            Valider
        </button>
        <a href="{{ path('account') }}" class="btn btn-danger btn-block">Annuler</a>

        {{ form_end(form) }}
    </fieldset>

    </div>
    </div>
    </div>
    </fieldset>

{% endblock %}