{% extends 'base.html.twig' %}

{% block title %}Modification du profil utilisateur{% endblock %}

{% block body %}
<title>Modification du compte</title>

    <fieldset class="container">
    <div class="col-md-15">
    <div class="card shadow-lg border-0 rounded-lg mt-1">
    <div class="card-header border-bottom-danger " >
        <h3  class="text-gray-900 text-center font-weight-bold my-4">

            <i class="fas fa-user-edit"></i> Modification du compte</b>
        </h3>
    </div>

    <div class="card-body ">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <fieldset class=" card-header border-bottom-warning border-left-warning" >

            <div class="row ">
            <div class="form-group col-md-4 ">
                <div class="m-0 font-weight-bold text-primary">
                    {{ form_label(form.username) }}
                </div>
                    {{ form_widget(form.username,
                        {'attr': { 'class': 'form-control dropdown-toggle '}}) }}
                <div class="form-error text-danger">
                    {{ form_errors(form.username) }}
                </div>
            </div>

            <div class="form-group col-md-4">
                <div class="m-0 font-weight-bold text-primary">
                    {{ form_label(form.email) }}
                </div>
                    {{ form_widget(form.email,
                        {'attr': { 'class': 'form-control dropdown-toggle '}}) }}
                <div class="form-error text-danger">
                    {{ form_errors(form.email) }}
                </div>
            </div>
            </div>
            <br>
            <button type="submit" class="btn btn-primary btn-block">
                Valider
            </button>
            <a href="{{ path('account') }}" class="btn btn-danger btn-block">Annuler</a>
            {{ form_end(form) }}

        </fieldset>
        </div>


    </div>

{% endblock %}