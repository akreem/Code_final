{% extends 'base.html.twig' %}
{% block title %}Détail {% endblock %}
{% block body %}
    <title>طلـب أسعـار عـدد {{ devisVierge.Year }}/{{ devisVierge.num }}</title>


    <div class="container mb-3 mt-3">
        <div class="col-md-9">
            <div class="card shadow-lg border-0 rounded-lg mt-1">
                <div class="card-header border-bottom-success" >

                    <h2 class="text-gray-900 text-center font-weight-bold my-4">
                        طلـب أسعـار عـدد
                        <b style="color: #ff253a">{{ devisVierge.Year }}/{{ devisVierge.num }}</b></h2>
                </div>

                <div class="card-body ">

                    <div class="container mb-3 mt-3">

                        <div class="card-body">

                            <div class="table-responsive">
                                <table class="table table-hover table-dark " width="100%" cellspacing="0" >
                                    <thead  class="bg-gradient-dark  text-white">

                                    <tr role="row">
                                        <th>#</th>
                                        <th>Produit</th>
                                        <th>Quantite</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for i,ld in lignedevis %}

                                        <tr>
                                            <td>{{ i+1 }}</td>
                                            <td>{{ ld.produit }}</td>
                                            <td>{{ ld.quantite}}</td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>


                                </table>
                            </div>
                        </div>
                    </div>

                </div></div></div></div>



{% endblock %}