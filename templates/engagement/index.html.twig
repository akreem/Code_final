{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
    <title>Ajouter Engagement</title>

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    </style>

    <body>

    <fieldset class="container">
        <div class="col-md-15">
            <div class="card shadow-lg border-0 rounded-lg mt-1">
                <div class="card-header border-bottom-success " >
                    <h3  class="text-gray-900 text-center font-weight-bold my-4">Ajouter  Engagment :
                    </h3>
                </div>
                <div class="card-body ">
                    {{ form_start(form) }}
                    <div class="col-md-13">
                        <fieldset class=" card-header border-bottom-primary border-left-primary" >

                                <div class="col">

                                    <div class="form-group">
                                        <div class="m-0 font-weight-bold text-primary">
                                            {{ form_label(form.montant,'Montant') }}
                                        </div>
                                        {{ form_widget(form.montant,{'attr': {'class': ' form-control form-control-sm '
                                            ,'step':'0.01','empty_data':'0','min':0,'value':0
                                            ,'label' : 'price'},'type':'number'
                                        }) }}
                                    </div>
                                </div>
                        <br>
                        <button class="btn btn-primary btn-block" type="submit">Valider</button>
                    {{ form_end(form) }}
    </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    </body>

    <!-- Embed Collection -->
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('embed.js') }}"></script>

